<div>
  <section class="section-padding-10 white">
    <div class="container">
      <div class="col-sm-12 info-tag">
        <section class="custom-padding" id="how-it-work">
          <div class="list-tags">
            <div class="tag-item">
              <div class="panel-left">
                <%= image_tag @tag.image.present? ? @tag.image : "tag_default", class: "tag-image" %>
              </div>
              <div class="panel-right">
                <div class="tag-name">
                  <%= link_to @tag.name.truncate(Settings.limit_string.tag_name, separator: /\s/),
                    @tag, title: @tag.name %>
                </div>
                <div class="tag-follow">
                  <i class="fa fa-user-plus" aria-hidden="true"></i>:
                  <%= @tag.used_count %> <%= t "tags.index.follower" %>
                </div>
                <div class="tag-post">
                  <i class="fa fa-file-text-o" aria-hidden="true"></i>:
                  <%= @tag.posts_tags.size %> <%= t "tags.index.post" %>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </section>

  <section class="white padding-bottom-30" id="latest-post">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-sm-12">
          <div class="listing">
            <div class="listing-area tab-post">
              <ul class="nav nav-tabs list-tab">
                <li class="active">
                  <a data-toggle="tab" href="#post"><%= t "tags.index.post" %></a>
                </li>
              </ul>
              <div class="tab-content tab-content-post">
                <div id="post" class="tab-pane active">
                  <%= render "posts_tag", posts_tags: @posts_tag %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-sm-12 col-xs-12 clearfix">
          <div class="side-bar">
            <div class="widget">
              <h2><%= t ".popular_tags" %></h2>
              <hr class="widget-separator no-margin">
              <div class="list-top-tags">
                <%= render partial: "static_pages/tags", collection: @tag_popular, as: :tag %>
              </div>
              <div class="all_tags">
                <%= link_to tags_path do %>
                  <span class="glyphicon glyphicon-tags"></span>
                  <%= t ".all_tags" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
