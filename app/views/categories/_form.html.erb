<%= form_for(category, option) do |f| %>
  <%= f.text_field :name, class: "form-control", placeholder: t("category_management.placeholder") %>
  <div class="modal-footer category">
    <button type="button" class="btn btn-xs btn-default" data-dismiss="modal">
      <%= t "cancel" %>
    </button>
    <%= f.submit t("ok"), class: "btn btn-xs btn-primary" %>
  <div>
<% end %>
