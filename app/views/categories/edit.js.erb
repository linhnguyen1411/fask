<% if @category %>
  $('.category-body').html('<%= j(render "form", category: @category, option: {remote: true} ) %>')
  $('#modal-edit-category').modal('show')
<% else %>
  swal({
    position: 'top-end',
    type: 'warning',
    title: I18n.t('category_management.not_found'),
    showConfirmButton: false,
    timer: 1500
  })
<% end %>
