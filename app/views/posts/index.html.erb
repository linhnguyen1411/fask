<div class="search-params" data-query="<%= params[:query] %>  "></div>
<div class="main-content-area">
  <!-- =-=-=-=-=-=-= Latest Questions  =-=-=-=-=-=-= -->
  <section class="white question-tabs padding-bottom-30" id="latest-post">
    <div class="container">
      <div class="row">
        <!-- Content Area Bar -->
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="panel-body">
            <div class="tab-content">
              <% if @posts.present? %>
                <% @posts.each do |post| %>
                  <div class="listing-grid">
                    <div class="row">
                      <div class="col-md-2 col-sm-2 col-xs-12 hidden-xs">
                        <a data-toggle="tooltip" data-placement="bottom"
                          data-original-title="<%= post.user.name %>" href="#">
                          <%= image_tag get_avatar_user(post.user),
                            class: "img-responsive center-block" %>
                        </a>
                      </div>
                      <div class="col-md-7 col-sm-8  col-xs-12">
                        <h3><span class="search-highlight"><%= link_to post.title, post %><span></h3>
                        <div class="listing-meta">
                          <span>
                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                            <%= time_ago_in_words post.created_at %>
                          </span>
                          <span>
                            <i class="fa fa fa-eye" aria-hidden="true"></i>
                            <%= post.count_view %> <%= t ".view" %>
                          </span>
                        </div>
                      </div>
                      <div class="col-md-10 col-sm-10  col-xs-12">
                        <div class="content-post">
                          <span class="search-highlight" ><%= raw post.content %></span>
                        </div>
                        <div class="pull-right tagcloud">
                          <% post.tags.each do |tag| %>
                            <%= link_to tag.name, tag %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
                <% else %>
                  <center><h1><%= t ".not_found" %></h1></center>
              <% end %>
              <div class="text-center clearfix">
                <%= paginate @posts %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
