<div class="view-login">
  <span class="background"></span>
  <div class="web-logo">
    <%= image_tag "logo" %>
  </div>
  <div class="form-login">
    <label class="title"><%= t ".login" %></label>
    <br>
    <div class="form-login-with">
      <!--<%= link_to "#", class: "btn-login" do %>
        <span class="icon"><i class="fa fa-facebook-official" aria-hidden="true"></i></span>
        <span class="text"> Login with facebook</span>
      <% end %>-->
      <% unless @new_user.class.omniauth_providers.nil? %>
        <div class="login-with-framgia text-center">
          <%- @new_user.class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(@new_user.class, provider),
              class: "btn-login" do %>
              <span class="icon"><%= image_tag "icon-wsm" %></span>
              <span class="text"><%= t ".sign_in_wsm" %></span>
            <% end %>
          <% end -%>
        </div>
      <% end %>
    </div>
    <span class="line"></span>
    <%= form_for(@new_user, url: session_path(@new_user)) do |f| %>
      <div class="group-field">
        <label class="field-tilte"><i class="fa fa-envelope-o" aria-hidden="true"></i></label>
        <%= f.email_field :email, autofocus: true, class: "field field-name",
          placeholder: true %>
      </div>
      <div class="group-field">
        <label class="field-tilte"><i class="fa fa-key" aria-hidden="true"></i></label>
        <%= f.password_field :password, autocomplete: "off",
          class: "field field-password", placeholder: true %>
      </div>
      <div class="remember-password">
          <label class="left">
            <%= f.check_box :remember_me %>
            <%= t ".remember_me" %>
          </label>
          <%= link_to new_user_password_path, class: "right" do %>
            <%= t(".forgot_password") %>
            <i class="fa fa-question-circle-o" aria-hidden="true"></i>
          <% end %>
      </div>
      <br>
      <div class="button-submit">
         <%= f.submit t(".sign_in"), class: "btn-login" %>
      </div>
    <% end %>
  </div>
</div>
