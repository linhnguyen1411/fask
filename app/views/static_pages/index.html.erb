                  <span>
                    <%= t ".login.title" %>
                    <strong><%= t ".login.facebook" %></strong>
                  </span>
                <% end %>
              </li>
              <li class="social3">
                <%= link_to "#" do %>
                  <%= image_tag "index-google" %>
                  <span>
                    <%= t ".login.title" %>
                    <strong><%= t ".login.google" %></strong>
                  </span>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
