<div>
  <div class="full-section search-section">
    <div class="search-area container">
      <h3 class="search-title"><%= t ".search_panel.title" %></h3>
      <p class="search-tag-line"><%= t ".search_panel.content" %></p>
      <%= form_tag "/posts", method: :get, class: "search-form clearfix",
        id: "search-form" do %>
        <%= text_field_tag "query", params[:query], class: "form-control
          search-term", placeholder: t(".search_panel.placeholder") %>
        <%= submit_tag t(".search_panel.button"), class: "search-btn" %>
      <% end %>
    </div>
  </div>

  <section class="custom-padding" id="how-it-work">
    <div class="container">
      <div class="main-heading text-center">
        <h2><%= t ".how_it_works" %></h2>
        <div class="slices"><span class="slice">
          </span><span class="slice"></span><span class="slice"></span>
        </div>
        <p><%= t ".title_step" %></p>
      </div>
      <div class="row">
        <div class="col-sm-4 col-md-4 col-xs-12  center-responsive">
          <%= image_tag "step1.png", class: "img-responsive" %>
          <h4><a href="#"><%= t ".step_1" %></a></h4>
        </div>
        <div class="col-sm-4 col-md-4 col-xs-12 center-responsive get-arrow">
          <%= image_tag "step2.png", class: "img-responsive" %>
          <h4><a href="#"><%= t ".step_2" %></a></h4>
        </div>
        <div class="col-sm-4 col-md-4 col-xs-12 center-responsive get-arrow">
          <%= image_tag "step3.png", class: "img-responsive" %>
          <h4><a href="#"><%= t ".step_3" %></a></h4>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </section>

  <section class="section-padding-80 white" id="latest-post">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-sm-12">
          <div class="listing">
            <div class="listing-area">
              <%= render partial: "static_pages/post", collection: @posts, as: :post %>
            </div>
            <div class="text-center clearfix">
              <%= paginate @posts %>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-sm-12 col-xs-12 clearfix">
          <div class="side-bar">
            <div class="widget">
              <h2><%= t ".top_users" %></h2>
              <hr class="widget-separator no-margin">
              <%= render partial: "static_pages/top_users", collection: @topUsers, as: :user %>
            </div>
            <div class="widget">
              <div class="recent-comments">
                <h2><%= t ".recent_comments" %></h2>
                <hr class="widget-separator no-margin">
                <%= render partial: "static_pages/recent_comments", collection: @recentComments, as: :comment %>
              </div>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </section>
  <div class="main-content-area">
    <div class="parallex section-padding fun-facts-bg text-center" data-stellar-background-ratio="0.1">
      <div class="container">
        <div class="row">
          <div class="col-xs-6 col-sm-3 col-md-3">
            <div class="statistic-percent" data-perc="356">
              <div class="facts-icons"><i class="fa fa-newspaper-o" aria-hidden="true"></i></i>
              </div>
              <div class="fact"> <span class="percentfactor"><%= total_post %></span>
                <p><%= t ".total_post" %></p>
              </div>
            </div>
          </div>
          <div class="col-xs-6 col-sm-3 col-md-3">
            <div class="statistic-percent" data-perc="126">
              <div class="facts-icons"><i class="fa fa-comments-o" aria-hidden="true"></i></span>
              </div>
              <div class="fact"> <span class="percentfactor"><%= total_answer %></span>
                <p><%= t ".total_answer" %></p>
              </div>
            </div>
          </div>
          <div class="col-xs-6 col-sm-3 col-md-3">
            <div class="statistic-percent" data-perc="434">
              <div class="facts-icons"><i class="fa fa-commenting-o" aria-hidden="true"></i></span>
              </div>
              <div class="fact"> <span class="percentfactor"><%= total_comment %></span>
                <p><%= t ".total_comment" %></p>
              </div>
            </div>
          </div>
          <div class="col-xs-6 col-sm-3 col-md-3">
            <div class="statistic-percent" data-perc="274">
              <div class="facts-icons"><i class="fa fa-users" aria-hidden="true"></i></span>
              </div>
              <div class="fact"> <span class="percentfactor"><%= total_member %></span>
                <p><%= t ".total_member" %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="custom-padding" id="clients">
    <div class="container">
      <div class="row">
        <div class="col-md-2 col-sm-4 col-xs-6 client-block">
          <div class="client-item client-item-style-2">
            <%= link_to "#", title: "Cliens Logo" do %>
