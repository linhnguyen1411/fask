            <% end %>
          </div>
        </div>
        <div class="col-md-2  col-xs-6 col-sm-4 client-block">
          <div class="client-item client-item-style-2">
            <%= link_to "#", title: "Cliens Logo" do %>
              <%= image_tag "client_7", alt: "Clients Logo" %>
            <% end %>
          </div>
        </div>
        <div class="col-md-2 col-xs-6 col-sm-4 client-block">
          <div class="client-item client-item-style-2">
            <%= link_to "#", title: "Cliens Logo" do %>
              <%= image_tag "client_8", alt: "Clients Logo" %>
            <% end %>
          </div>
        </div>
        <div class="col-md-2 col-xs-6 col-sm-4 client-block">
          <div class="client-item client-item-style-2">
            <%= link_to "#", title: "Cliens Logo" do %>
              <%= image_tag "client_9", alt: "Clients Logo" %>
            <% end %>
          </div>
        </div>
        <div class="col-md-2 col-xs-6 col-sm-4 client-block">
          <div class="client-item client-item-style-2">
            <%= link_to "#", title: "Cliens Logo" do %>
              <%= image_tag "client_10" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="parallex section-padding  our-apps text-center">
    <div class="container">
      <div class="main-heading text-center">
        <h2><%= t ".app.title" %></h2>
        <hr class="main">
      </div>
      <div class="row">
        <div class="app-content">
          <div class="col-md-2  col-sm-2"></div>
          <div class="col-md-4 col-sm-4">
            <%= link_to "#", class: "app-grid" do %>
              <span class="app-icon"><%= image_tag "index-mobile-ios" %></span>
              <div class="app-title">
                <h5><%= t ".app.available" %></h5>
                <h3><%= t ".app.ios" %></h3>
              </div>
            <% end %>
          </div>
          <div class="col-md-4 col-sm-4">
            <%= link_to "#", class: "app-grid" do %>
              <span class="app-icon"><%= image_tag "index-mobile-android" %></span>
              <div class="app-title">
                <h5><%= t ".app.available" %></h5>
                <h3><%= t ".app.android" %></h3>
              </div>
            <% end %>
          </div>
          <div class="col-md-2  col-sm-2"></div>
        </div>
      </div>
    </div>
  </div>
  <section id="social-media">
    <div class="block no-padding">
      <div class="row">
        <div class="col-md-12">
          <div class="social-bar">
            <ul>
              <li class="social2">
                <%= link_to "#" do %>
                  <%= image_tag "index-framgia" %>
                  <span>
                    <%= t ".login.title" %>
