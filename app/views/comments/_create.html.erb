<%= form_for comment, remote: true, html: { class: "comment-form" } do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :object_id, value: object_id %>
  <%= f.hidden_field :object_type, value: object_type %>
  <div class="form-group">
    <%= f.hidden_field :content, placeholder: t(".content"),
      minlength: Settings.post.min_title, required: true, class: "form-control txta-tag-users" %>
  </div>
  <div class="form-group">
    <%= f.submit button_name, class: "btn btn-primary btn-xs" %>
  </div>
<% end %>
