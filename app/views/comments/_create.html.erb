<%= form_for comment, remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :object_id, value: object_id %>
  <%= f.hidden_field :object_type, value: object_type %>
  <div class="form-group">
    <%= f.text_area :content, placeholder: t(".content"),
      minlength: Settings.post.min_title, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit button_name, class: "btn btn-primary btn-xs" %>
  </div>
<% end %>
