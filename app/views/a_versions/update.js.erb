<% if @type == Settings.edit %>
  sweetAlert(I18n.t('reactions.create.success'), '', 'success');
  $('.content-improvement-<%= @version.id %>').html('<%= j raw @version.content %>');
  $('#edit-form-<%= @version.id %>').slideToggle();
<% else %>
  <% if @success %>
    sweetAlert(I18n.t('reactions.create.success'), '', 'success');
    $('#a-version-body').html('<%= j render "version_content" %>');
    $('.post-content').html('<%= j raw @version.content %>');
    read_more();
  <% elsif current_user.not_login %>
    window.location.replace('/users/sign_in');
  <% else %>
    sweetAlert(I18n.t('reactions.create.error'), '', 'error');
  <% end %>
<% end %>
