<li class="<%= noti.not_seen? ? "status-no-seen" : "" %>">
  <%= link_to post_path(noti.load_message.last, noti_id: noti.id), class: "notification-item" do %>
    <div class="col-md-2 text-center">
      <%= image_tag noti.activity.owner.avatar.url, class: "user-avatar" %>
    </div>
    <div class="col-md-10">
      <div class="row pd-top-10">
        <span class="user-name"><%= noti.activity.owner.name %></span>
        <span class="time"><%= time_ago_in_words noti.created_at %></span>
      </div>
      <span class="row content"><%= noti.load_message.first %></span>
    </div>
  <% end %>
</li>
